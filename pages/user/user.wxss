/* pages/user/user.wxss */
page {
    background-color: #efefef;
}

.user_info_wrap {
    height: 45vh;
    background-color: var(--themeColor);
    overflow: hidden;
    position: relative;
}

.user_info_wrap .user_img_wrap {
    position: relative;
}

.user_info_wrap .user_btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1rpx solid green;
    padding: 10rpx 20rpx;
    color: green;
    font-size: 38rpx;
    border-radius: 10rpx;
}

.user_img_wrap .user_bg {
    height: 50vh;
    filter: blur(10rpx);
}

.user_img_wrap .user_info {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.user_info .user_icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.user_info .user_name {
    color: #fff;
    margin-top: 40rpx;
    font-size: 34rpx;
}

.user_content {
    position: relative;
}

.user_content .user_main {
    position: absolute;
    width: 90%;
    top: -30rpx;
    left: 50%;
    transform: translateX(-50%);
    padding-bottom: 50rpx;
}

.user_main .history_wrap {
    display: flex;
    background-color: #fff;
    padding: 10rpx 0;
}

.history_wrap navigator {
    flex: 1;
    text-align: center;
}

.his_num {
    color: red;
}

.user_content .orders_wrap {
    background-color: #fff;
    margin-top: 20rpx;
}

.orders_wrap .orders_title {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.orders_wrap .order_content {
    display: flex;
}

.order_content navigator {
    flex: 1;
    padding: 20rpx 0;
    text-align: center;
}

.order_content .iconfont {
    font-size: 40rpx;
    color: red;
    margin-bottom: 5rpx;
}

.user_main .address_wrap {
    background-color: #fff;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;
}

.user_main .app_info_wrap {
    background-color: #fff;
}

.app_info_wrap .app_info_item {
    padding: 20rpx;
}

.app_info_wrap .app_info_item:first-child {
    display: flex;
    justify-content: space-between;
}

.app_info_wrap .app_info_item:not(:last-child) {
    border-bottom: 1rpx solid #ccc;
}

.user_main .recommend_wrap {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 20rpx;
}