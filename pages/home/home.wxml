<!--pages/home/home.wxml-->
<view>
    <swiper indicator-dots="true" circular="true">
        <swiper-item wx:for="{{swiperList}}" wx:key="id">
            <image src="{{item.image}}"></image>
        </swiper-item>
    </swiper>

    <view class="grid-list">
        <navigator class="grid-item" url="/pages/shopList/shopList?id={{item.id}}&title={{item.name}}" open-type="navigate" wx:for="{{gridList}}" wx:key="id">
            <image src="{{item.icon}}"></image>
            <text>{{item.name}}</text>
        </navigator>
    </view>

    <view class="img-box">
        <view bindtap="gotoMessage">推荐</view>
        <view bindtap="gotoInfo">论坛</view>
    </view>
</view>