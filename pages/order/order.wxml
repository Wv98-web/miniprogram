<!--pages/order/order.wxml-->
<Tabs tabs="{{tabs}}" bind:tabsItemChange="handleTabsItemChange">
    <block wx:if="{{tabs[0].isActive}}">
        <view class="allOrder_wrap">
            <view class="order_item" wx:for="{{orders}}" wx:key="order_id">
                <view class="number">
                    <text>订单编号</text>
                    <text>{{item.order_number}}</text>
                </view>
                <view class="price">
                    <text>订单价格</text>
                    <text>￥{{item.order_price}}</text>
                </view>
                <view class="data">
                    <text>订单日期</text>
                    <text>{{item.create_time}}</text>
                </view>
            </view>
        </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">待付款订单</block>
    <block wx:elif="{{tabs[2].isActive}}">待收货订单</block>
    <block wx:elif="{{tabs[3].isActive}}">退款/退货订单</block>
</Tabs>