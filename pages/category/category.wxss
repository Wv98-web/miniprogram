/* pages/category/category.wxss */
page {
    height: 100%;
}

.cates {
    height: 100%;
}

.cates_container {
    height: calc(100vh - 90rpx);
    display: flex;
}

.cates_container .left_menu {
    flex: 2;
}

.left_menu .menu_item {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}

.left_menu .active {
    color: var(--themeColor);
    border-right: 5rpx solid currentColor;
}

.cates_container .right_content {
    flex: 5;
}

.goods_list {
    display: flex;
    flex-wrap: wrap;
}

.goods_list navigator {
    width: 33.33%;
    text-align: center;
}

.goods_list navigator image {
    width: 50%;
}

.goods_title {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods_title .delimilter {
    padding: 0 10rpx;
    color: #ccc;
}